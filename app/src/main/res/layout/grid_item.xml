<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_mode"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_mode"
        app:layout_constraintTop_toTopOf="@id/tv_mode"
        app:layout_constraintBottom_toBottomOf="@id/tv_mode"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tv_mode"
        android:layout_width="150dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_mode"
        android:gravity="center_vertical"
        android:layout_marginStart="6dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="Test"/>

</androidx.constraintlayout.widget.ConstraintLayout>